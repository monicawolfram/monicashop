<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bedsheet Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; }

    /* Sidebar */
    .sidebar { 
      height: 100vh; background: #2c3e50; color: #fff; 
      position: fixed; top: 0; left: 0; width: 250px; 
      transition: width 0.3s; overflow-y: auto; 
    }
    .sidebar.collapsed { width: 70px; }
    .sidebar h4 { color: #ecf0f1; }
    .sidebar .nav-link { color: #fff; padding: 15px 20px; display: flex; align-items: center; transition: background 0.2s; }
    .sidebar .nav-link:hover { background: #34495e; }
    .sidebar .nav-link i { margin-right: 10px; min-width: 20px; text-align: center; }
    .sidebar.collapsed .nav-link span { display: none; }
    .sidebar .nav-link.active { background: #1abc9c; }

    /* Main content */
    .main-content { margin-left: 250px; transition: margin-left 0.3s; padding: 20px; }
    .main-content.collapsed { margin-left: 70px; }

    /* Navbar */
    .top-navbar { height: 60px; background: #fff; border-bottom: 1px solid #dee2e6; display: flex; align-items: center; padding: 0 20px; position: sticky; top: 0; z-index: 1000; }
    .toggle-btn { cursor: pointer; font-size: 1.2rem; margin-right: 15px; }

    /* Table */
    table.table { background: #fff; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    table.table thead { background: #2c3e50; color: #fbbf24; }
    table.table tbody tr:hover { background: #f3f4f6; }

    /* Status */
    .status-instock { color: #10b981; font-weight: bold; }
    .status-lowstock { color: #f59e0b; font-weight: bold; }
    .status-outstock { color: #ef4444; font-weight: bold; }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h4 class="text-center py-3">Bedsheet Panel</h4>
    <ul class="nav flex-column">
      <li><a href="/Bedsheets" class="nav-link"><i class="fas fa-home"></i> <span>Dashboard</span></a></li>
      <li><a href="/Bedsheets/Bedsheet_managemant" class="nav-link active"><i class="fas fa-layer-group"></i> <span>Bedsheet Management</span></a></li>
      <li><a href="/Bedsheets/Sales_bedsheets" class="nav-link"><i class="fas fa-shopping-cart"></i> <span>Sales</span></a></li>
      <li><a href="/Bedsheets/Products_bedsheets" class="nav-link"><i class="fas fa-box"></i> <span>Products</span></a></li>
      <li><a href="/Bedsheet/Reports_bedsheets" class="nav-link"><i class="fas fa-chart-line"></i> <span>Reports</span></a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content" id="main-content">
    <div class="top-navbar">
      <i class="fas fa-bars toggle-btn" id="toggleSidebar"></i>
      <h5 class="mb-0">Bedsheet Management</h5>
    </div>

    <div class="container-fluid mt-4">
      <!-- Add Bedsheet Button -->
      <div class="d-flex justify-content-between mb-3">
        <h4>Bedsheet Inventory</h4>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBedsheetModal"><i class="fas fa-plus"></i> Add Bedsheet</button>
      </div>

      <!-- Bedsheet Table -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Brand</th>
              <th>Size</th>
              <th>Color</th>
              <th>Quantity</th>
              <th>Status</th>
              <th>Price (TZS)</th>
              <th>Stock Value (TZS)</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="bedsheetTableBody"></tbody>
        </table>
      </div>

      <!-- Total Stock Value -->
      <h5 id="totalStockValue" class="mt-3 text-end text-primary"></h5>
    </div>
  </div>

  <!-- Add Bedsheet Modal -->
  <div class="modal fade" id="addBedsheetModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="addBedsheetForm">
          <div class="modal-header">
            <h5 class="modal-title">Add Bedsheet</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label>Brand</label>
              <input type="text" class="form-control" id="brand" required>
            </div>
            <div class="mb-3">
              <label>Size</label>
              <select class="form-control" id="size" required>
                <option>Single</option>
                <option>Double</option>
                <option>Queen</option>
                <option>King</option>
              </select>
            </div>
            <div class="mb-3">
              <label>Color</label>
              <input type="text" class="form-control" id="color" required>
            </div>
            <div class="mb-3">
              <label>Quantity</label>
              <input type="number" class="form-control" id="quantity" required>
            </div>
            <div class="mb-3">
              <label>Price (TZS)</label>
              <input type="number" class="form-control" id="price" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
async function fetchBedsheets() {
  try {
    const res = await fetch('/all/bedsheets');
    const bedsheets = await res.json();
    updateTable(bedsheets);  // ðŸ‘ˆ update table & auto calculate
  } catch (err) {
    console.error(err);
  }
}

function updateTable(bedsheets) {
  const tbody = document.getElementById("bedsheetTableBody");
  const totalStockValueElem = document.getElementById("totalStockValue");
  tbody.innerHTML = "";

  let totalStockValue = 0;

  bedsheets.forEach((b) => {
    let status = b.quantity === 0 ? "Out of Stock" : b.quantity <= 10 ? "Low Stock" : "In Stock";
    const stockValue = b.quantity * b.price;
    totalStockValue += stockValue;

    const row = document.createElement("tr");
    row.innerHTML = `
      <td>${b.id}</td>
      <td>${b.brand}</td>
      <td>${b.size}</td>
      <td>${b.color}</td>
      <td>${b.quantity}</td>
      <td class="${statusClass(status)}">${status}</td>
      <td>${Number(b.price).toLocaleString()}</td>
      <td>${Number(stockValue).toLocaleString()}</td>
      <td>
        <button class="btn btn-sm btn-warning" onclick="editBedsheet(${b.id})"><i class="fas fa-edit"></i></button>
        <button class="btn btn-sm btn-danger" onclick="deleteBedsheet(${b.id})"><i class="fas fa-trash"></i></button>
      </td>
    `;
    tbody.appendChild(row);
  });

  totalStockValueElem.textContent = `Total Stock Value: ${totalStockValue.toLocaleString()} TZS`;

  // Auto calculate summary (totals, inStock, lowStock, etc.)
  calculateSummary(bedsheets);
}

function statusClass(status){
  switch(status){
    case "In Stock": return "status-instock";
    case "Low Stock": return "status-lowstock";
    case "Out of Stock": return "status-outstock";
    default: return "";
  }
}

function calculateSummary(bedsheets) {
  let total = bedsheets.length;
  let inStock = 0, lowStock = 0, outStock = 0;
  let totalValue = 0;

  bedsheets.forEach(b => {
    if (b.quantity === 0) outStock++;
    else if (b.quantity <= 10) lowStock++;
    else inStock++;
    totalValue += b.quantity * b.price;
  });

  // Update DOM
  document.getElementById("totalBedsheets").textContent = total;
  document.getElementById("inStock").textContent = inStock;
  document.getElementById("lowStock").textContent = lowStock;
  document.getElementById("outStock").textContent = outStock;
  document.getElementById("totalValue").textContent = totalValue.toLocaleString();

  // Send summary to backend for saving
  saveSummary({ total, inStock, lowStock, outStock, totalValue });
}

async function saveSummary(summary) {
  try {
    await fetch('/save-summary', {
      method: 'POST',
      headers: {'Content-Type':'application/json'},
      body: JSON.stringify(summary)
    });
  } catch (err) {
    console.error("Failed to save summary:", err);
  }
}

// Add Bedsheet
document.getElementById("addBedsheetForm").addEventListener("submit", async function(e){
  e.preventDefault();
  const newBedsheet = {
    brand: document.getElementById("brand").value,
    size: document.getElementById("size").value,
    color: document.getElementById("color").value,
    quantity: parseInt(document.getElementById("quantity").value),
    price: parseFloat(document.getElementById("price").value)
  };
  await fetch('/add-bedsheets', {
    method: 'POST',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify(newBedsheet)
  });
  this.reset();
  bootstrap.Modal.getInstance(document.getElementById("addBedsheetModal")).hide();
  fetchBedsheets();
});

// Edit Bedsheet
async function editBedsheet(id) {
  const newBrand = prompt("Enter new brand:");
  if (!newBrand) return;
  await fetch(`/edit-bedsheets/${id}`, {
    method: 'PUT',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({ brand: newBrand })
  });
  fetchBedsheets();
}

// Delete Bedsheet
async function deleteBedsheet(id) {
  if (!confirm("Are you sure to delete this bedsheet?")) return;
  await fetch(`/delete-bedsheets/${id}`, { method: 'DELETE' });
  fetchBedsheets();
}

// Sidebar toggle
document.getElementById("toggleSidebar").addEventListener("click", function() {
  document.getElementById("sidebar").classList.toggle("collapsed");
  document.getElementById("main-content").classList.toggle("collapsed");
});

// Fetch on load
fetchBedsheets();
</script>



</body>
</html>
