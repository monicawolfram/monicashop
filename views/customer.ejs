<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agent Customers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background: #f8f9fa; }
    .sidebar {
      min-width: 220px;
      max-width: 220px;
      background: #343a40;
      color: #fff;
      min-height: 100vh;
      position: fixed;
    }
    .sidebar h4 { color: #1abc9c; }
    .sidebar .nav-link {
      color: #fff;
      padding: 10px 20px;
      display: flex;
      align-items: center;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
      background: #495057;
      border-radius: 5px;
    }
    .sidebar .nav-link i { margin-right: 10px; }
    .content { margin-left: 240px; padding: 30px; }
    .section { padding: 30px 0; }
    .card { border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    .summary-card { border-radius: 10px; color: #fff; padding: 15px; margin-bottom: 15px; }
    .bg-total { background: #1abc9c; }
    .bg-active { background: #3498db; }
    .bg-inactive { background: #e67e22; }
    .table th, .table td { vertical-align: middle; }
  </style>
</head>
<body>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <h4 class="text-center py-3">Agent Panel</h4>
  <ul class="nav flex-column">
    <li><a href="/agent" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
    <li><a href="/agent/transactions" class="nav-link"><i class="fas fa-exchange-alt"></i> Transactions</a></li>
    <li><a href="/agent/customer" class="nav-link active"><i class="fas fa-users"></i> Customers</a></li>
    <li><a href="/agent/debts" class="nav-link"><i class="fas fa-hand-holding-usd"></i> Debts/Credits</a></li>
    <li><a href="/agent/security" class="nav-link"><i class="fas fa-shield-alt"></i> Security</a></li>
    <li><a href="/agent/Settings1" class="nav-link"><i class="fas fa-cog"></i> Settings</a></li>
    <li><a href="/agent/logout" class="nav-link"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
  </ul>
</div>

<!-- Main Content -->
<div class="content">
  <section class="section">
    <div class="container-fluid">
      <h2 class="text-center mb-4">Customers</h2>

      <!-- Customer Summary -->
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="summary-card bg-total text-center">
            <h6>Total Customers</h6>
            <h4 id="totalCustomers">0</h4>
          </div>
        </div>
        <div class="col-md-4">
          <div class="summary-card bg-active text-center">
            <h6>Active Customers</h6>
            <h4 id="activeCustomers">0</h4>
          </div>
        </div>
        <div class="col-md-4">
          <div class="summary-card bg-inactive text-center">
            <h6>Inactive Customers</h6>
            <h4 id="inactiveCustomers">0</h4>
          </div>
        </div>
      </div>

      <!-- Add Customer Form -->
      <div class="card mb-4 p-4">
        <h5>Add New Customer</h5>
        <form id="customerForm">
          <div class="row">
            <div class="col-md-4 mb-3">
              <label class="form-label">Customer Name</label>
              <input type="text" class="form-control" id="customerName" required>
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Phone Number</label>
              <input type="text" class="form-control" id="phoneNumber" required>
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Status</label>
              <select class="form-control" id="status" required>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Add Customer</button>
        </form>
      </div>

      <!-- Customer Table -->
      <div class="card p-3">
        <h5>Customer List</h5>
        <div class="table-responsive">
          <table class="table table-bordered table-striped" id="customerTable">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Status</th>
                <th>Date Added</th>
              </tr>
            </thead>
            <tbody>
              <!-- Customers will be added dynamically -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  let customers = [];

  const form = document.getElementById('customerForm');
  const tableBody = document.querySelector('#customerTable tbody');

  function updateSummary() {
    document.getElementById('totalCustomers').innerText = customers.length;
    document.getElementById('activeCustomers').innerText = customers.filter(c => c.status === 'Active').length;
    document.getElementById('inactiveCustomers').innerText = customers.filter(c => c.status === 'Inactive').length;
  }

  function renderTable() {
    tableBody.innerHTML = '';
    customers.forEach((c, index) => {
      const row = `<tr>
        <td>${index + 1}</td>
        <td>${c.name}</td>
        <td>${c.phone}</td>
        <td>${c.status}</td>
        <td>${c.date}</td>
      </tr>`;
      tableBody.innerHTML += row;
    });
  }

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const name = document.getElementById('customerName').value;
    const phone = document.getElementById('phoneNumber').value;
    const status = document.getElementById('status').value;
    const date = new Date().toLocaleString();

    customers.push({ name, phone, status, date });
    renderTable();
    updateSummary();
    form.reset();
  });
</script>
</body>
</html>
