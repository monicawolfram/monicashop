<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shop Settings Dashboard</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    header { background: #2c3e50; color: #fff; padding: 15px; text-align: center; }
    .card { margin-bottom: 15px; cursor: pointer; transition: transform 0.2s; }
    .card:hover { transform: scale(1.02); }
    .card-body ul { padding-left: 1rem; margin-bottom: 0; }
    .card-body ul li { padding: 5px 0; list-style: none; }
    .card-body ul li a { text-decoration: none; color: #1e293b; }
    .card-body ul li a:hover { text-decoration: underline; color: #3b82f6; }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <h2 id="title">âš™ Settings / Mipangilio</h2>
  </header>

  <div class="container mt-4">
    <!-- Language Switch -->
    <div class="text-end mb-3">
      <select id="language" class="form-select w-auto d-inline">
        <option value="en">English</option>
        <option value="sw">Kiswahili</option>
      </select>
    </div>

    <div class="row">

      <!-- Settings Cards -->
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title" data-bs-toggle="collapse" data-bs-target="#generalSettings" aria-expanded="false" style="cursor:pointer"
                data-en="General Business Settings" data-sw="Mipangilio ya Biashara">
              General Business Settings
            </h5>
            <ul class="collapse" id="generalSettings">
              <li><a href="/settings/general/business-name" data-en="Business Name" data-sw="Jina la Biashara">Business Name</a></li>
              <li><a href="/settings/general/logo" data-en="Business Logo" data-sw="Logo ya Biashara">Business Logo</a></li>
              <li><a href="/settings/general/contact" data-en="Contact (Email, Phone)" data-sw="Mawasiliano (Barua pepe, Simu)">Contact</a></li>
              <li><a href="/settings/general/location" data-en="Location / Address" data-sw="Mahali / Anwani">Location</a></li>
              <li><a href="/settings/general/currency" data-en="Currency" data-sw="Sarafu">Currency</a></li>
              <li><a href="/settings/general/tax-vat" data-en="Tax & VAT Rate" data-sw="Kodi & Kiwango cha VAT">Tax & VAT</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title" data-bs-toggle="collapse" data-bs-target="#accountSettings" aria-expanded="false" style="cursor:pointer"
                data-en="User Account Settings" data-sw="Mipangilio ya Akaunti">
              User Account Settings
            </h5>
            <ul class="collapse" id="accountSettings">
              <li><a href="/settings/account/seller-name" data-en="Seller Name (Profile Info)" data-sw="Jina la Muuzaji (Taarifa za Profaili)">Seller Name</a></li>
              <li><a href="/settings/account/change-password" data-en="Change Password" data-sw="Badilisha Nenosiri">Change Password</a></li>
              <li><a href="/settings/account/2fa" data-en="Enable 2FA (Two-Factor Authentication)" data-sw="Washa 2FA (Uthibitisho wa Hatua Mbili)">Enable 2FA</a></li>
              <li><a href="/settings/account/activity-log" data-en="Account Activity Log" data-sw="Kumbukumbu ya Shughuli za Akaunti">Activity Log</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title" data-bs-toggle="collapse" data-bs-target="#notificationsSettings" aria-expanded="false" style="cursor:pointer"
                data-en="Notifications Settings" data-sw="Mipangilio ya Arifa">
              Notifications Settings
            </h5>
            <ul class="collapse" id="notificationsSettings">
              <li><a href="/settings/notifications/stock-alerts" data-en="Stock threshold alerts" data-sw="Arifa za kiwango cha chini cha bidhaa">Stock Alerts</a></li>
              <li><a href="/settings/notifications/expiry-alerts" data-en="Expiry alerts (30 days before)" data-sw="Arifa za kuisha muda (siku 30 kabla)">Expiry Alerts</a></li>
              <li><a href="/settings/notifications/system-alerts" data-en="System backup / login alerts" data-sw="Arifa za Backup / Kuingia">System Alerts</a></li>
              <li><a href="/settings/notifications/custom-alerts" data-en="Enable / disable specific alerts" data-sw="Washa / Zima aina fulani ya arifa">Custom Alerts</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Repeat same structure for other settings cards -->
      <!-- Example: Sales & Reports Settings -->
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title" data-bs-toggle="collapse" data-bs-target="#salesReportsSettings" aria-expanded="false" style="cursor:pointer"
                data-en="Sales & Reports Settings" data-sw="Mipangilio ya Mauzo na Ripoti">
              Sales & Reports
            </h5>
            <ul class="collapse" id="salesReportsSettings">
              <li><a href="/settings/sales-reports/targets" data-en="Daily / Weekly / Monthly Targets" data-sw="Malengo ya Kila siku / Wiki / Mwezi">Sales Targets</a></li>
              <li><a href="/settings/sales-reports/format" data-en="Reports format (PDF/Excel)" data-sw="Aina ya Ripoti (PDF/Excel)">Reports Format</a></li>
              <li><a href="/settings/sales-reports/export" data-en="Export preferences" data-sw="Chaguo za Kuhifadhi Ripoti">Export Preferences</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- You can continue adding the rest of the cards in the same format -->
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Language Switch Script -->
  <script>
    const langSelect = document.getElementById("language");
    langSelect.addEventListener("change", () => {
      const lang = langSelect.value;
      document.querySelectorAll("[data-en]").forEach(el => {
        el.innerText = el.getAttribute(`data-${lang}`);
      });
      localStorage.setItem("shopLang", lang);
    });

    const savedLang = localStorage.getItem("shopLang") || "en";
    langSelect.value = savedLang;
    langSelect.dispatchEvent(new Event("change"));
  </script>
</body>
</html>
