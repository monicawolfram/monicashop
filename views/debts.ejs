<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Debts & Credits - Agent</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background: #f8f9fa; }
    .sidebar {
      min-width: 220px;
      max-width: 220px;
      background: #343a40;
      color: #fff;
      min-height: 100vh;
      position: fixed;
    }
    .sidebar h4 { color: #1abc9c; }
    .sidebar .nav-link {
      color: #fff;
      padding: 10px 20px;
      display: flex;
      align-items: center;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
      background: #495057;
      border-radius: 5px;
    }
    .sidebar .nav-link i { margin-right: 10px; }
    .content { margin-left: 240px; padding: 30px; }
    .section { padding: 30px 0; }
    .card { border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    .summary-card { border-radius: 10px; color: #fff; padding: 15px; margin-bottom: 15px; }
    .bg-debt { background: #e74c3c; }
    .bg-credit { background: #2ecc71; }
    .bg-balance { background: #3498db; }
    .table th, .table td { vertical-align: middle; }
  </style>
</head>
<body>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <h4 class="text-center py-3">Agent Panel</h4>
  <ul class="nav flex-column">
    <li><a href="/agent" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
    <li><a href="/agent/transactions" class="nav-link"><i class="fas fa-exchange-alt"></i> Transactions</a></li>
    <li><a href="/agent/customer" class="nav-link"><i class="fas fa-users"></i> Customers</a></li>
    <li><a href="/agent/debts" class="nav-link active"><i class="fas fa-hand-holding-usd"></i> Debts/Credits</a></li>
    <li><a href="/agent/security" class="nav-link"><i class="fas fa-shield-alt"></i> Security</a></li>
    <li><a href="/agent/Settings1" class="nav-link"><i class="fas fa-cog"></i> Settings</a></li>
    <li><a href="/agent/logout" class="nav-link"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
  </ul>
</div>

<!-- Main Content -->
<div class="content">
  <section class="section">
    <div class="container-fluid">
      <h2 class="text-center mb-4">Debts & Credits</h2>

      <!-- Summary Cards -->
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="summary-card bg-debt text-center">
            <h6>Total Debts</h6>
            <h4 id="totalDebts">0 TZS</h4>
          </div>
        </div>
        <div class="col-md-4">
          <div class="summary-card bg-credit text-center">
            <h6>Total Credits</h6>
            <h4 id="totalCredits">0 TZS</h4>
          </div>
        </div>
        <div class="col-md-4">
          <div class="summary-card bg-balance text-center">
            <h6>Balance</h6>
            <h4 id="balance">0 TZS</h4>
          </div>
        </div>
      </div>

      <!-- Add Debt/Credit Form -->
      <div class="card mb-4 p-4">
        <h5>Add Debt/Credit</h5>
        <form id="debtCreditForm">
          <div class="row">
            <div class="col-md-4 mb-3">
              <label class="form-label">Customer Name</label>
              <input type="text" class="form-control" id="customerName" required>
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Type</label>
              <select class="form-control" id="type" required>
                <option value="Debt">Debt</option>
                <option value="Credit">Credit</option>
              </select>
            </div>
            <div class="col-md-4 mb-3">
              <label class="form-label">Amount (TZS)</label>
              <input type="number" class="form-control" id="amount" required min="0">
            </div>
          </div>
          <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
        </form>
      </div>

      <!-- Debts/Credits Table -->
      <div class="card p-3">
        <h5>Debts & Credits List</h5>
        <div class="table-responsive">
          <table class="table table-bordered table-striped" id="debtCreditTable">
            <thead class="table-dark">
              <tr>
                <th>#</th>
                <th>Customer</th>
                <th>Type</th>
                <th>Amount (TZS)</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <!-- Records will be added dynamically -->
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  let records = [];

  const form = document.getElementById('debtCreditForm');
  const tableBody = document.querySelector('#debtCreditTable tbody');

  function updateSummary() {
    const totalDebts = records.filter(r => r.type === 'Debt').reduce((sum, r) => sum + parseFloat(r.amount), 0);
    const totalCredits = records.filter(r => r.type === 'Credit').reduce((sum, r) => sum + parseFloat(r.amount), 0);
    const balance = totalCredits - totalDebts;

    document.getElementById('totalDebts').innerText = totalDebts.toLocaleString() + ' TZS';
    document.getElementById('totalCredits').innerText = totalCredits.toLocaleString() + ' TZS';
    document.getElementById('balance').innerText = balance.toLocaleString() + ' TZS';
  }

  function renderTable() {
    tableBody.innerHTML = '';
    records.forEach((r, index) => {
      const row = `<tr>
        <td>${index + 1}</td>
        <td>${r.customer}</td>
        <td>${r.type}</td>
        <td>${parseFloat(r.amount).toLocaleString()}</td>
        <td>${r.date}</td>
      </tr>`;
      tableBody.innerHTML += row;
    });
  }

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const customer = document.getElementById('customerName').value;
    const type = document.getElementById('type').value;
    const amount = document.getElementById('amount').value;
    const date = new Date().toLocaleString();

    records.push({ customer, type, amount, date });
    renderTable();
    updateSummary();
    form.reset();
  });
</script>
</body>
</html>
