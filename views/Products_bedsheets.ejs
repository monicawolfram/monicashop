<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bedsheet Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; }
    .sidebar { height: 100vh; background: #2c3e50; color: #fff; position: fixed; top: 0; left: 0; width: 250px; transition: width 0.3s; overflow-y: auto; }
    .sidebar.collapsed { width: 70px; }
    .sidebar .nav-link { color: #fff; padding: 15px 20px; display: flex; align-items: center; }
    .sidebar .nav-link.active { background: #1abc9c; }
    .main-content { margin-left: 250px; transition: margin-left 0.3s; padding: 20px; }
    .main-content.collapsed { margin-left: 70px; }
    .top-navbar { height: 60px; background: #fff; border-bottom: 1px solid #dee2e6; display: flex; align-items: center; padding: 0 20px; }
    .toggle-btn { cursor: pointer; font-size: 1.2rem; margin-right: 15px; }
    table.table { background: #fff; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    table.table thead { background: #2c3e50; color: #fbbf24; }
    .card { border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h4 class="text-center py-3">Bedsheet Panel</h4>
    <ul class="nav flex-column">
      <li><a href="/Bedsheets" class="nav-link"><i class="fas fa-home"></i> <span>Dashboard</span></a></li>
      <li><a href="/Bedsheets/Bedsheet_management" class="nav-link"><i class="fas fa-layer-group"></i> <span>Bedsheet Management</span></a></li>
      <li><a href="/Bedsheets/Sales_bedsheets" class="nav-link"><i class="fas fa-shopping-cart"></i> <span>Sales</span></a></li>
      <li><a href="/Bedsheets/Products_bedsheets" class="nav-link active"><i class="fas fa-box"></i> <span>Products</span></a></li>
      <li><a href="/Bedsheet/Reports_bedsheets" class="nav-link"><i class="fas fa-chart-line"></i> <span>Reports</span></a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content" id="main-content">
    <div class="top-navbar">
      <i class="fas fa-bars toggle-btn" id="toggleSidebar"></i>
      <h5 class="mb-0">Bedsheet Products</h5>
    </div>

    <div class="container-fluid mt-4">
      <h4>Products List</h4>

      <!-- Products Table -->
      <div class="table-responsive mb-4">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Brand</th>
              <th>Size</th>
              <th>Color</th>
              <th>Stock</th>
              <th>Price (TZS)</th>
            </tr>
          </thead>
          <tbody id="productsTableBody"></tbody>
        </table>
      </div>

      <!-- Insights Section -->
      <div class="row">
        <div class="col-md-4">
          <div class="card p-3 mb-3">
            <h5 class="text-success"><i class="fas fa-star"></i> Most Demanded</h5>
            <ul class="list-group" id="topProducts"></ul>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3 mb-3">
            <h5 class="text-warning"><i class="fas fa-exclamation-circle"></i> Least Demanded</h5>
            <ul class="list-group" id="lowProducts"></ul>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card p-3 mb-3">
            <h5 class="text-danger"><i class="fas fa-battery-quarter"></i> Low Stock</h5>
            <ul class="list-group" id="lowStock"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // Sample products data
  let products = [
    {id:1, brand:"Luxury Sleep", size:"King", color:"White", stock:50, price:25000, sold:80},
    {id:2, brand:"ComfortZone", size:"Queen", color:"Blue", stock:20, price:18000, sold:40},
    {id:3, brand:"SleepWell", size:"Single", color:"Grey", stock:5, price:12000, sold:5},
    {id:4, brand:"DreamSoft", size:"Queen", color:"Pink", stock:8, price:15000, sold:10}
  ];

  function updateProductsTable() {
    const tbody = document.getElementById("productsTableBody");
    tbody.innerHTML = "";
    products.forEach(p => {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${p.id}</td>
        <td>${p.brand}</td>
        <td>${p.size}</td>
        <td>${p.color}</td>
        <td>${p.stock}</td>
        <td>${p.price.toLocaleString()}</td>
      `;
      tbody.appendChild(row);
    });
    updateInsights();
  }

  function updateInsights() {
    const topList = document.getElementById("topProducts");
    const lowList = document.getElementById("lowProducts");
    const stockList = document.getElementById("lowStock");

    // Most demanded
    const most = [...products].sort((a,b)=>b.sold-a.sold).slice(0,3);
    topList.innerHTML = "";
    most.forEach(p=> topList.innerHTML += `<li class="list-group-item">${p.brand} (${p.sold} sold)</li>`);

    // Least demanded
    const least = [...products].sort((a,b)=>a.sold-b.sold).slice(0,3);
    lowList.innerHTML = "";
    least.forEach(p=> lowList.innerHTML += `<li class="list-group-item">${p.brand} (${p.sold} sold)</li>`);

    // Low stock (<10)
    stockList.innerHTML = "";
    products.filter(p=>p.stock<10).forEach(p=> stockList.innerHTML += `<li class="list-group-item">${p.brand} (${p.stock} left)</li>`);
  }

  document.getElementById("toggleSidebar").addEventListener("click", function() {
    document.getElementById("sidebar").classList.toggle("collapsed");
    document.getElementById("main-content").classList.toggle("collapsed");
  });

  updateProductsTable();
</script>
</body>
</html>
