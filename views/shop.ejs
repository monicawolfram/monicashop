<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop Dashboard</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #0d1b2a;
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      text-align: center;
    }

    .logo {
      margin-bottom: 20px;
    }

    .logo img {
      height: 60px;
    }

    h2 {
      margin-bottom: 30px;
      font-size: 1.8em;
      font-weight: 600;
    }

    .profiles {
      background: #1b263b;
      padding: 30px;
      border-radius: 15px;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 20px;
      width: 80%;
      max-width: 900px;
    }

    .profile-card {
      cursor: pointer;
      transition: transform 0.2s;
      text-decoration: none;
      color: #fff;
    }

    .profile-card:hover {
      transform: scale(1.05);
    }

    .profile-card img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: #f5f5f5;
      display: block;
      margin: auto;
      padding: 10px;
    }

    .profile-card p {
      margin-top: 10px;
      font-size: 1.1em;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="logo">
    <img src="https://cdn-icons-png.flaticon.com/512/3081/3081559.png" alt="Shop Logo">
  </div>
  
  <h2>Shop Dashboard</h2>

  <div class="profiles">
    <!-- Dashboard Overview -->
    <a href="/shop/Home" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/1828/1828884.png" alt="Home">
      <p>Home</p>
    </a>

    <!-- Product Management -->
    <a href="/shop/product_management" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/3081/3081559.png" alt="Products">
      <p>Product Management</p>
    </a>

    <!-- sales Management -->
    <a href="/shop/Sales" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/3183/3183463.png" alt="Sales">
      <p>Sales</p>
    </a>

    <!-- Profite and Loss -->
    <a href="/shop/profite_loss" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/1077/1077012.png" alt="profite_loss">
      <p>Profite and Loss</p>
    </a>

    <!-- stock_status -->
    <a href="/shop/Stock_status" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/1170/1170678.png" alt="Stock Status">
      <p>Stock status</p>
    </a>

    <!-- Analysis -->
    <a href="/shop/Analysis" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/1046/1046784.png" alt="Analysis">
      <p>Analysis</p>
    </a>

    <!-- notification -->
    <a href="/shop/notification" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/1827/1827951.png" alt="Notification">
      <p>Notification</p>
    </a>

    <!-- Settings -->
    <a href="/shop/settings" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/3524/3524659.png" alt="Settings">
      <p>Settings</p>
    </a>

    <!-- debits -->
    <a href="/shop/Debits" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/3064/3064197.png" alt="Debits">
      <p>Debits</p>
    </a>

    <!--  Audit Logs -->
    <a href="/shop/Audit_logs" class="profile-card">
      <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Audit Logs">
      <p>Audit Logs</p>
    </a>
  </div>
</body>
</html>
