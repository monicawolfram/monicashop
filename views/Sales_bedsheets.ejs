<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bedsheet Sales</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; }
    .sidebar { height: 100vh; background: #2c3e50; color: #fff; position: fixed; top: 0; left: 0; width: 250px; transition: width 0.3s; overflow-y: auto; }
    .sidebar.collapsed { width: 70px; }
    .sidebar .nav-link { color: #fff; padding: 15px 20px; display: flex; align-items: center; }
    .sidebar .nav-link.active { background: #1abc9c; }
    .main-content { margin-left: 250px; transition: margin-left 0.3s; padding: 20px; }
    .main-content.collapsed { margin-left: 70px; }
    .top-navbar { height: 60px; background: #fff; border-bottom: 1px solid #dee2e6; display: flex; align-items: center; padding: 0 20px; }
    .toggle-btn { cursor: pointer; font-size: 1.2rem; margin-right: 15px; }
    table.table { background: #fff; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    table.table thead { background: #2c3e50; color: #fbbf24; }
    .summary-card { border-radius: 10px; color: #fff; padding: 20px; }
    .bg-today { background: #1abc9c; }
    .bg-week { background: #3498db; }
    .bg-month { background: #9b59b6; }
    .bg-year { background: #e67e22; }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h4 class="text-center py-3">Bedsheet Panel</h4>
    <ul class="nav flex-column">
      <li><a href="/Bedsheets" class="nav-link"><i class="fas fa-home"></i> <span>Dashboard</span></a></li>
      <li><a href="/Bedsheets/Bedsheet_management" class="nav-link"><i class="fas fa-layer-group"></i> <span>Bedsheet Management</span></a></li>
      <li><a href="/Bedsheets/Sales_bedsheets" class="nav-link active"><i class="fas fa-shopping-cart"></i> <span>Sales</span></a></li>
      <li><a href="/Bedsheets/Products_bedsheets" class="nav-link"><i class="fas fa-box"></i> <span>Products</span></a></li>
      <li><a href="/Bedsheet/Reports_bedsheets" class="nav-link"><i class="fas fa-chart-line"></i> <span>Reports</span></a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content" id="main-content">
    <div class="top-navbar">
      <i class="fas fa-bars toggle-btn" id="toggleSidebar"></i>
      <h5 class="mb-0">Bedsheet Sales</h5>
    </div>

    <div class="container-fluid mt-4">
      <!-- Summary Cards -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="summary-card bg-today text-center">
            <h6>Today</h6>
            <h4 id="todayTotal">0</h4>
          </div>
        </div>
        <div class="col-md-3">
          <div class="summary-card bg-week text-center">
            <h6>This Week</h6>
            <h4 id="weekTotal">0</h4>
          </div>
        </div>
        <div class="col-md-3">
          <div class="summary-card bg-month text-center">
            <h6>This Month</h6>
            <h4 id="monthTotal">0</h4>
          </div>
        </div>
        <div class="col-md-3">
          <div class="summary-card bg-year text-center">
            <h6>This Year</h6>
            <h4 id="yearTotal">0</h4>
          </div>
        </div>
      </div>

      <!-- Add Sale Button -->
      <div class="d-flex justify-content-between mb-3">
        <h4>Sales Records</h4>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addSaleModal"><i class="fas fa-plus"></i> Record Sale</button>
      </div>

      <!-- Sales Table -->
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Responsible</th>
              <th>Customer Name</th>
              <th>Bedsheet</th>
              <th>Type / Size</th>
              <th>Quantity</th>
              <th>Total Price (TZS)</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="salesTableBody"></tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Add Sale Modal -->
  <div class="modal fade" id="addSaleModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="addSaleForm">
          <div class="modal-header">
            <h5 class="modal-title">Record Sale</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label>Responsible</label>
              <input type="text" class="form-control" id="saleResponsible" required placeholder="Enter staff name">
            </div>
            <div class="mb-3">
              <label>Customer Full Name</label>
              <input type="text" class="form-control" id="customerName" required>
            </div>
            <div class="mb-3">
              <label>Bedsheet</label>
              <select class="form-control" id="saleBedsheet" required></select>
            </div>
            <div class="mb-3">
              <label>Type / Size</label>
              <input type="text" class="form-control" id="saleType" placeholder="e.g., King, Queen" required>
            </div>
            <div class="mb-3">
              <label>Quantity</label>
              <input type="number" class="form-control" id="saleQuantity" min="1" required>
            </div>
            <div class="mb-3">
              <label>Total Price (TZS)</label>
              <input type="text" class="form-control" id="saleTotal" readonly>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-success">Save Sale</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  let bedsheets = [
    {id:1, brand:"Luxury Sleep", size:"King", color:"White", quantity:50, price:25000},
    {id:2, brand:"ComfortZone", size:"Queen", color:"Blue", quantity:5, price:18000},
    {id:3, brand:"SleepWell", size:"Single", color:"Grey", quantity:0, price:12000},
  ];

  let sales = [];

  function loadBedsheetOptions() {
    const select = document.getElementById("saleBedsheet");
    select.innerHTML = "";
    bedsheets.forEach(b => {
      select.innerHTML += `<option value="${b.id}" data-price="${b.price}" data-size="${b.size}">${b.brand} (${b.size}) - ${b.price.toLocaleString()} TZS</option>`;
    });
  }

  // Auto-calculate total price
  const quantityInput = document.getElementById("saleQuantity");
  const bedsheetSelect = document.getElementById("saleBedsheet");
  const totalInput = document.getElementById("saleTotal");
  function calculateTotal() {
    const selectedOption = bedsheetSelect.selectedOptions[0];
    const price = parseInt(selectedOption.dataset.price || 0);
    const qty = parseInt(quantityInput.value || 0);
    totalInput.value = (price * qty).toLocaleString() + " TZS";
    document.getElementById("saleType").value = selectedOption.dataset.size;
  }
  bedsheetSelect.addEventListener("change", calculateTotal);
  quantityInput.addEventListener("input", calculateTotal);

  function updateTotals() {
    let todayTotal = 0, weekTotal = 0, monthTotal = 0, yearTotal = 0;
    const now = new Date();
    const startOfWeek = new Date(now);
    startOfWeek.setDate(now.getDate() - now.getDay());

    sales.forEach(s => {
      const d = s.date;
      if(d.toDateString() === now.toDateString()) todayTotal += s.total;
      if(d >= startOfWeek) weekTotal += s.total;
      if(d.getMonth() === now.getMonth() && d.getFullYear() === now.getFullYear()) monthTotal += s.total;
      if(d.getFullYear() === now.getFullYear()) yearTotal += s.total;
    });

    document.getElementById("todayTotal").innerText = todayTotal.toLocaleString() + " TZS";
    document.getElementById("weekTotal").innerText = weekTotal.toLocaleString() + " TZS";
    document.getElementById("monthTotal").innerText = monthTotal.toLocaleString() + " TZS";
    document.getElementById("yearTotal").innerText = yearTotal.toLocaleString() + " TZS";
  }

  function updateSalesTable() {
    const tbody = document.getElementById("salesTableBody");
    tbody.innerHTML = "";
    sales.forEach((s, index) => {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${s.id}</td>
        <td>${s.responsible}</td>
        <td>${s.customer}</td>
        <td>${s.bedsheet}</td>
        <td>${s.type}</td>
        <td>${s.quantity}</td>
        <td>${s.total.toLocaleString()}</td>
        <td>${s.date.toLocaleString()}</td>
        <td>
          <button class="btn btn-sm btn-primary" onclick="editSale(${index})"><i class="fas fa-edit"></i></button>
          <button class="btn btn-sm btn-danger" onclick="deleteSale(${index})"><i class="fas fa-trash"></i></button>
        </td>
      `;
      tbody.appendChild(row);
    });
    updateTotals();
  }

  document.getElementById("addSaleForm").addEventListener("submit", function(e){
    e.preventDefault();
    const responsible = document.getElementById("saleResponsible").value;
    const customer = document.getElementById("customerName").value;
    const bedsheetId = parseInt(document.getElementById("saleBedsheet").value);
    const type = document.getElementById("saleType").value;
    const quantity = parseInt(document.getElementById("saleQuantity").value);

    const product = bedsheets.find(b => b.id === bedsheetId);
    if(!product) return alert("Bedsheet not found!");
    if(quantity > product.quantity) return alert("Not enough stock!");

    const totalPrice = product.price * quantity;

    const newSale = {
      id: sales.length + 1,
      responsible,
      customer,
      bedsheet: product.brand,
      type,
      quantity,
      total: totalPrice,
      date: new Date()
    };
    sales.push(newSale);
    product.quantity -= quantity;

    updateSalesTable();
    this.reset();
    totalInput.value = "";
    bootstrap.Modal.getInstance(document.getElementById("addSaleModal")).hide();
  });

  function deleteSale(index) {
    if(confirm("Delete this sale?")){
      const sale = sales[index];
      // Return quantity to stock
      const product = bedsheets.find(b => b.brand === sale.bedsheet && b.size === sale.type);
      if(product) product.quantity += sale.quantity;

      sales.splice(index,1);
      updateSalesTable();
    }
  }

  function editSale(index) {
    const sale = sales[index];
    // Pre-fill modal with data
    document.getElementById("saleResponsible").value = sale.responsible;
    document.getElementById("customerName").value = sale.customer;
    const bedsheetOption = Array.from(bedsheetSelect.options).find(opt => opt.text.includes(sale.bedsheet + " (" + sale.type + ")"));
    if(bedsheetOption) bedsheetOption.selected = true;
    document.getElementById("saleQuantity").value = sale.quantity;
    calculateTotal();

    // Remove old sale from array temporarily
    sales.splice(index,1);
    updateSalesTable();

    bootstrap.Modal.getInstance(document.getElementById("addSaleModal")).show();
  }

  document.getElementById("toggleSidebar").addEventListener("click", function() {
    document.getElementById("sidebar").classList.toggle("collapsed");
    document.getElementById("main-content").classList.toggle("collapsed");
  });

  loadBedsheetOptions();
  updateSalesTable();
</script>
</body>
</html>
