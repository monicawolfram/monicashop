<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agent Security</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body { font-family: 'Segoe UI', sans-serif; background: #f8f9fa; }
    .sidebar {
      min-width: 220px;
      max-width: 220px;
      background: #343a40;
      color: #fff;
      min-height: 100vh;
      position: fixed;
    }
    .sidebar h4 { color: #1abc9c; }
    .sidebar .nav-link {
      color: #fff;
      padding: 10px 20px;
      display: flex;
      align-items: center;
    }
    .sidebar .nav-link.active, .sidebar .nav-link:hover {
      background: #495057;
      border-radius: 5px;
    }
    .sidebar .nav-link i { margin-right: 10px; }
    .content { margin-left: 240px; padding: 30px; }
    .card { border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); margin-bottom: 20px; }
  </style>
</head>
<body>

<!-- Sidebar -->
<div class="sidebar" id="sidebar">
  <h4 class="text-center py-3">Agent Panel</h4>
  <ul class="nav flex-column">
    <li><a href="/agent" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
    <li><a href="/agent/transactions" class="nav-link"><i class="fas fa-exchange-alt"></i> Transactions</a></li>
    <li><a href="/agent/customer" class="nav-link"><i class="fas fa-users"></i> Customers</a></li>
    <li><a href="/agent/debts" class="nav-link"><i class="fas fa-hand-holding-usd"></i> Debts/Credits</a></li>
    <li><a href="/agent/security" class="nav-link active"><i class="fas fa-shield-alt"></i> Security</a></li>
    <li><a href="/agent/Settings1" class="nav-link"><i class="fas fa-cog"></i> Settings</a></li>
    <li><a href="/agent/logout" class="nav-link"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
  </ul>
</div>

<!-- Main Content -->
<div class="content">
  <h2 class="text-center mb-4">Security Settings</h2>

  <!-- Change Password Form -->
  <div class="card p-4">
    <h5>Change Password</h5>
    <form id="passwordForm">
      <div class="mb-3">
        <label class="form-label">Current Password</label>
        <input type="password" class="form-control" id="currentPassword" required>
      </div>
      <div class="mb-3">
        <label class="form-label">New Password</label>
        <input type="password" class="form-control" id="newPassword" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Confirm New Password</label>
        <input type="password" class="form-control" id="confirmPassword" required>
      </div>
      <button type="submit" class="btn btn-primary"><i class="fas fa-key"></i> Update Password</button>
    </form>
  </div>

  <!-- Security Questions Form -->
  <div class="card p-4">
    <h5>Security Questions</h5>
    <form id="securityForm">
      <div class="mb-3">
        <label class="form-label">Question 1</label>
        <input type="text" class="form-control" id="question1" placeholder="e.g., What is your favorite color?" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Answer 1</label>
        <input type="text" class="form-control" id="answer1" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Question 2</label>
        <input type="text" class="form-control" id="question2" placeholder="e.g., What is your pet's name?" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Answer 2</label>
        <input type="text" class="form-control" id="answer2" required>
      </div>
      <button type="submit" class="btn btn-success"><i class="fas fa-shield-alt"></i> Save Security Questions</button>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const passwordForm = document.getElementById('passwordForm');
  const securityForm = document.getElementById('securityForm');

  passwordForm.addEventListener('submit', (e) => {
    e.preventDefault();
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    if(newPassword !== confirmPassword){
      alert('Passwords do not match!');
      return;
    }
    alert('Password updated successfully!');
    passwordForm.reset();
  });

  securityForm.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Security questions updated successfully!');
    securityForm.reset();
  });
</script>

</body>
</html>
