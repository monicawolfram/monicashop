<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <title>Product Management - Shop Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: #f4f6f9;
    }
    h2 {
      color: #2c3e50;
    }
    .form-container, .table-container {
      background: white;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    input, select, button, textarea {
      padding: 10px;
      margin: 5px 0;
      width: 100%;
      max-width: 400px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }
    button {
      background: #3498db;
      color: white;
      border: none;
      cursor: pointer;
      max-width: 200px;
    }
    button:hover {
      background: #2980b9;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }
    table th, table td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
      font-size: 14px;
    }
    table th {
      background: #3498db;
      color: white;
    }
    img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      border-radius: 4px;
    }
  </style>
</head>
<body>

<h2>‚ûï Ongeza Bidhaa Mpya</h2>
<div class="form-container">
  <form id="productForm" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Jina la Bidhaa" required>
    <input type="number" name="cost_price" placeholder="Bei ya Manunuzi" required>
    <input type="number" name="sell_price" placeholder="Bei ya Mauzo" required>
    <input type="number" name="stock" placeholder="Idadi ya Bidhaa" required>
    <input type="text" name="category" placeholder="Category">
    <input type="file" name="image" accept="image/*">
    <textarea name="description" placeholder="Maelezo ya Bidhaa" rows="3"></textarea>
    <button type="submit">Ongeza Bidhaa</button>
  </form>
</div>

<h2>üì¶ Orodha ya Bidhaa Zote</h2>
<div class="table-container">
  <table id="productTable">
    <thead>
      <tr>
        <th>Picha</th>
        <th>Jina</th>
        <th>Bei ya Manunuzi</th>
        <th>Bei ya Mauzo</th>
        <th>Idadi</th>
        <th>Maelezo</th>
        <th>Vitendo</th>
      </tr>
    </thead>
    <tbody>
      <!-- Bidhaa mpya zitaongezwa hapa -->
    </tbody>
  </table>
</div>

<script>
const form = document.getElementById('productForm');
const tableBody = document.querySelector('#productTable tbody');

let editProductId = null; // Track the product being edited

// Load products from backend
async function loadProducts() {
  try {
    const res = await fetch('/products');
    const data = await res.json();
    tableBody.innerHTML = '';
    if(data.success){
      data.products.forEach((p) => {
        const status = p.stock <= 5 ? 'Pungufu' : 'Muhimu';
        const row = document.createElement('tr');
        row.innerHTML = `  
          <td>${p.image ? `<img src="${p.image}" alt="Picha">` : 'N/A'}</td>
          <td>${p.name}</td>
          <td>TZS ${parseFloat(p.cost_price).toLocaleString()}</td>
          <td>TZS ${parseFloat(p.sell_price).toLocaleString()}</td>
          <td>${p.stock}</td>
          <td>${p.description || ''}</td>
          <td>
            <button onclick="editProduct(${p.id})">‚úè Edit</button>
            <button onclick="deleteProduct(${p.id})">üóë Futa</button>
          </td>
        `;
        tableBody.appendChild(row);
      });
    }
  } catch(err){
    console.error('Error loading products:', err);
  }
}

// Add or Update product
form.addEventListener('submit', async (e) => {
  e.preventDefault();
  const formData = new FormData(form);

  try {
    let url = '/products';
    let method = 'POST';
    if(editProductId){
      url = `/products/${editProductId}`;
      method = 'PUT';
    }

    const res = await fetch(url, {
      method: method,
      body: formData
    });
    const data = await res.json();

    if(data.success){
      form.reset();
      editProductId = null; // Reset edit mode
      loadProducts(); // refresh table
    } else {
      alert('Error saving product');
    }
  } catch(err){
    console.error('Error:', err);
  }
});

// Edit product
async function editProduct(id) {
  try {
    const res = await fetch(`/products/${id}`);
    if (!res.ok) {
      alert('Product not found');
      return;
    }

    const data = await res.json();
    if (data.success) {
      const p = data.product;
      document.getElementById('productName').value = p.name;
      document.getElementById('purchasePrice').value = p.cost_price;
      document.getElementById('sellingPrice').value = p.sell_price;
      document.getElementById('quantity').value = p.stock;
      document.getElementById('description').value = p.description || '';
      editProductId = p.id; // Set form in edit mode
    } else {
      alert('Product not found');
    }
  } catch (err) {
    console.error('Error fetching product:', err);
    alert('Failed to fetch product');
  }
}


// Delete product
async function deleteProduct(id){
  if(!confirm('Una uhakika unataka kufuta bidhaa hii?')) return;
  try {
    const res = await fetch(`/products/${id}`, { method: 'DELETE' });
    const data = await res.json();
    if(data.success){
      loadProducts();
    }
  } catch(err){
    console.error('Error deleting product:', err);
  }
}

// Load table on page load
loadProducts();
</script>


</body>
</html>
